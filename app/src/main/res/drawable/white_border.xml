<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top Line (상단 테두리 선 - 왼쪽 부분) -->
    <item
        android:left="-2dp"
        android:width="1000dp"
        android:height="8px">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>

    <!-- Top Line (상단 테두리 선 - 오른쪽 부분) -->
    <item
        android:gravity="end"
        android:width="600dp"
        android:height="8px">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>

    <!-- left Line -->
    <item
        android:width="8px"
        android:gravity="start">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>
    <!-- right Line -->
    <item
        android:width="8px"
        android:height="430dp"
        android:gravity="top|end">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>
    <item
        android:width="8px"
        android:height="430dp"
        android:gravity="bottom|end">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>

    <!-- bottom Line (하단 테두리 선 - 왼쪽 부분) -->
    <item
        android:width="1000dp"
        android:height="8px"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>

    <!-- bottom Line (하단 테두리 선 - 오른쪽 부분) -->
    <item
        android:width="600dp"
        android:height="8px"
        android:gravity="bottom|right">>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>
