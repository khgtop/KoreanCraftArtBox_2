<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9F8"
    android:id="@+id/rootView"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="188px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="172px"
            android:layout_height="match_parent"
            android:fontFamily="@font/suit_semibold"
            android:textColor="@color/black"
            android:textSize="65px"
            android:gravity="center"
            android:text="2"/>

        <View
            android:layout_width="4px"
            android:layout_height="150px"
            android:layout_marginTop="19px"
            android:layout_marginBottom="19px"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/suit_semibold"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginStart="78px"
            android:textSize="65px"
            android:text="표본 정보"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/suit_medium"
            android:gravity="center_vertical"
            android:textColor="#a4a4a4"
            android:layout_marginStart="50px"
            android:textSize="40px"
            android:text="버튼을 눌러 자세한 표본 정보를 확인해 보세요."/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1130px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/leftButton"
            android:layout_width="172px"
            android:layout_height="wrap_content"
            android:src="@drawable/button_left"
            android:layout_gravity="center_vertical"
            />

        <View
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:layout_marginTop="16px"
            android:layout_marginBottom="16px"
            android:background="@color/black"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="2206px"
            android:layout_height="wrap_content"
            android:paddingLeft="137px"
            android:paddingRight="179px"
            android:layout_gravity="center"
            android:background="#F1EEEC"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="90px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80px"
                    >

                    <LinearLayout
                        android:id="@+id/content1"
                        android:layout_width="360px"
                        android:layout_height="516px"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="360px"
                            android:layout_height="360px"
                            android:layout_marginBottom="30px"
                            android:src="@drawable/content_3_1_1"
                            />
                        <LinearLayout
                            android:layout_width="360px"
                            android:layout_height="126px"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/content_box">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="금박"
                                    android:fontFamily="@font/suit_semibold"
                                    android:textSize="54px"
                                    android:letterSpacing="-0.05"
                                    android:textColor="@drawable/button_text_color_selector"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/content2"
                        android:layout_width="360px"
                        android:layout_height="516px"
                        android:layout_marginStart="150px"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="360px"
                            android:layout_height="360px"
                            android:layout_marginBottom="30px"
                            android:src="@drawable/content_3_1_2"
                            />
                        <LinearLayout
                            android:layout_width="360px"
                            android:layout_height="126px"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/content_box">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="대모와 금속선"
                                    android:fontFamily="@font/suit_semibold"
                                    android:textSize="54px"
                                    android:letterSpacing="-0.05"
                                    android:textColor="@drawable/button_text_color_selector"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/content3"
                        android:layout_width="360px"
                        android:layout_height="516px"
                        android:layout_marginStart="150px"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="360px"
                            android:layout_height="360px"
                            android:layout_marginBottom="30px"
                            android:src="@drawable/content_3_1_3"
                            />

                        <LinearLayout
                            android:layout_width="360px"
                            android:layout_height="126px"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/content_box">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="어피"
                                    android:fontFamily="@font/suit_semibold"
                                    android:textSize="54px"
                                    android:letterSpacing="-0.05"
                                    android:textColor="@drawable/button_text_color_selector"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/content4"
                        android:layout_width="360px"
                        android:layout_height="516px"
                        android:layout_marginStart="150px"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="360px"
                            android:layout_height="360px"
                            android:layout_marginBottom="30px"
                            android:src="@drawable/content_3_1_4"
                            />

                        <LinearLayout
                            android:layout_width="360px"
                            android:layout_height="126px"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/content_box">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="칠화"
                                    android:fontFamily="@font/suit_semibold"
                                    android:textSize="54px"
                                    android:letterSpacing="-0.05"
                                    android:textColor="@drawable/button_text_color_selector"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="166px"
                    >

                    <LinearLayout
                        android:id="@+id/content5"
                        android:layout_width="360px"
                        android:layout_height="516px"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="360px"
                            android:layout_height="360px"
                            android:layout_marginBottom="30px"
                            android:src="@drawable/content_3_1_5"
                            />

                        <LinearLayout
                            android:layout_width="360px"
                            android:layout_height="126px"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/content_box">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="난각"
                                    android:fontFamily="@font/suit_semibold"
                                    android:textSize="54px"
                                    android:letterSpacing="-0.05"
                                    android:textColor="@drawable/button_text_color_selector"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <View
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:layout_marginTop="16px"
            android:layout_marginBottom="16px"
            android:background="@color/black"/>
    </LinearLayout>

</LinearLayout>