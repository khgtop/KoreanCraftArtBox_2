<!-- activity_main.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/rootView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="774px"
            android:orientation="vertical"
            android:id="@+id/header_layout"
            android:layout_marginStart="64px"
            android:layout_marginEnd="64px"
            android:paddingTop="74px"
            >
            <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="182px"
            android:text="기법 상자 탐색하기"
            android:textSize="160px"
            android:fontFamily="@font/suit_bold"
            android:textColor="@color/black"
            />
            <ImageView
                android:layout_width="731px"
                android:layout_height="40px"
                android:layout_marginTop="44px"
                android:layout_marginStart="4px"
                android:src="@drawable/logotype"
                android:foregroundGravity="center"
                />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/header_layout_open"
            android:layout_width="match_parent"
            android:layout_height="224px"
            android:layout_marginStart="64px"
            android:layout_marginEnd="64px"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기법 상자 탐색하기"
                android:fontFamily="@font/suit_bold"
                android:textSize="60px"
                android:textFontWeight="800"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <ImageView
                android:layout_width="731px"
                android:layout_height="40px"
                android:src="@drawable/logotype"
                android:foregroundGravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            >
            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/black"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp">

                <View
                    android:id="@+id/layout1_bg"
                    android:layout_width="match_parent"
                    android:layout_height="820px"
                    android:background="@drawable/layout1_bg"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="270px"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:background="@android:color/transparent"
                    >
                    <LinearLayout
                        android:id="@+id/title1"
                        android:layout_width="match_parent"
                        android:layout_height="270px"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        >
                        <TextView
                            android:id="@+id/title_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="150px"
                            android:text="바탕"
                            android:textColor="@color/black"
                            android:textSize="110px"
                            android:lineHeight="137px"
                            android:layout_marginStart="64px"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/suit_medium"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/caretButton1"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_marginEnd="64px"
                            android:layout_gravity="center"
                            android:src="@drawable/button_caret_open" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/description1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="64px"
                        android:layout_marginEnd="64px"
                        >
                        <TextView
                            android:layout_width="1502px"
                            android:layout_height="174px"
                            android:text="바탕은 칠기를 제작할 때 가장 기본 뼈대가 되는 부분입니다.\n바탕 준비와 바탕 종류에 대해 알아보세요."
                            android:textColor="@color/black"
                            android:lineHeight="85px"
                            android:letterSpacing="-0.05"
                            android:textSize="54px" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="165px"
                            >

                            <Button
                                android:id="@+id/button_1_1"
                                android:layout_width="1188px"
                                android:layout_height="185px"
                                android:text="제작"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                />

                            <Button
                                android:id="@+id/button_1_2"
                                android:layout_width="1188px"
                                android:layout_height="185px"
                                android:text="종류"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                android:layout_marginStart="48px"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout android:id="@+id/detail_content_frame1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="1330px"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/black"/>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp">
                <View
                    android:id="@+id/layout2_bg"
                    android:layout_width="match_parent"
                    android:layout_height="820px"
                    android:background="@drawable/layout2_bg"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="270px"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:background="@android:color/transparent"
                    >

                    <LinearLayout
                        android:id="@+id/title2"
                        android:layout_width="match_parent"
                        android:layout_height="270px"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        >
                        <TextView
                            android:id="@+id/title_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="150px"
                            android:text="회칠과 장식"
                            android:textColor="@color/black"
                            android:textSize="110px"
                            android:lineHeight="137px"
                            android:layout_marginStart="64px"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/suit_medium"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/caretButton2"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_marginEnd="64px"
                            android:layout_gravity="center"
                            android:src="@drawable/button_caret_open" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/description2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                        android:layout_marginStart="64px"
                        android:layout_marginEnd="64px"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="1502px"
                            android:layout_height="174px"
                            android:text="회칠은 옻칠과 각종 재를 섞어 만든 혼합 재료입니다.\n회칠의 사용에 대해 알아보세요."
                            android:textColor="@color/black"
                            android:lineHeight="85px"
                            android:letterSpacing="-0.05"
                            android:textSize="54px" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="165px"
                            >
                            <Button
                                android:id="@+id/button_2_1"
                                android:layout_width="1188px"
                                android:layout_height="185px"
                                android:text="회칠이란?"
                                android:textSize="70px"
                                android:layout_marginRight="48px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                />
                            <Button
                                android:id="@+id/button_2_2"
                                android:layout_width="1188px"
                                android:layout_height="185px"
                                android:text="다양한 장식 기법"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout android:id="@+id/detail_content_frame2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="1330px"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/black"
                />
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp">

                <View
                    android:id="@+id/layout3_bg"
                    android:layout_width="match_parent"
                    android:layout_height="820px"
                    android:background="@drawable/layout3_bg"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="270px"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:background="@android:color/transparent"
                    >

                    <LinearLayout
                        android:id="@+id/title3"
                        android:layout_width="match_parent"
                        android:layout_height="270px"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        >
                        <TextView
                            android:id="@+id/title_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="150px"
                            android:text="나전 기법"
                            android:textColor="@color/black"
                            android:textSize="110px"
                            android:lineHeight="137px"
                            android:layout_marginStart="64px"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/suit_medium"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/caretButton3"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_marginEnd="64px"
                            android:layout_gravity="center"
                            android:src="@drawable/button_caret_open" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/description3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                        android:layout_marginStart="64px"
                        android:layout_marginEnd="64px"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="1502px"
                            android:layout_height="174px"
                            android:text="바탕에 옻칠하여 기본 형태를 만들면 그 위에 각종 재료로 장식을 합니다.\n다양한 장식 기법에 대해 알아보세요."
                            android:textColor="@color/black"
                            android:lineHeight="85px"
                            android:letterSpacing="-0.05"
                            android:textSize="54px" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="167px"
                            >
                            <Button
                                android:id="@+id/button_3_1"
                                android:layout_width="772px"
                                android:layout_height="185px"
                                android:text="자개 붙이기"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                android:layout_marginRight="58px"
                                />
                            <Button
                                android:id="@+id/button_3_2"
                                android:layout_width="772px"
                                android:layout_height="185px"
                                android:text="재료"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                android:layout_marginRight="58px"
                                />
                            <Button
                                android:id="@+id/button_3_3"
                                android:layout_width="772px"
                                android:layout_height="185px"
                                android:text="도구"
                                android:textSize="70px"
                                android:fontFamily="@font/suit_semibold"
                                android:background="@drawable/button_bg"
                                android:textColor="@drawable/button_text_color_selector"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout android:id="@+id/detail_content_frame3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="1330px"
                        />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/divider_4"
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="#222222"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>